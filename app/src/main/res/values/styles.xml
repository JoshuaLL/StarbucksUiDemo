<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="shapeAppearanceOverlay">@style/CardCustomCorners</item>
    </style>

    <style name="CardCustomCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">5dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">5dp</item>
    </style>
</resources>